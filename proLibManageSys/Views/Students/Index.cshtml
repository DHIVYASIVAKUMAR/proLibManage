@model IEnumerable<proLibManageSys.Models.Students>
@{
	ViewBag.Title = "Index";
}

<center><h2>List of Students</h2></center>
<div>
	<button class="btn btn-primary">@Html.ActionLink("Create New", "Create")</button>
</div>

